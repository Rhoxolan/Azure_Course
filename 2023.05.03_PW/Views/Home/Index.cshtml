@{
	ViewData["Title"] = "Home Page";
}

<h1>
	Add lot
</h1>
<hr />
<div class="mb-3">
	<div class="row">
		<div class="col">
			<label class="form-label" for="CurrencyType">
				Currency Type
			</label>
		</div>
	</div>
	<div class="row">
		<div class="col-6 col-md-5 col-lg-4 col-xxl-3">
			<select id="CurrencyType" name="CurrencyType" class="form-select">
				@foreach (var item in Enum.GetValues(typeof(CurrencyType)))
				{
					<option value="@item.ToString()">
						@item
					</option>
				}
			</select>
		</div>
	</div>
</div>
<div class="mb-3">
	<div class="row">
		<div class="col">
			<label class="form-label" for="Seller">
				Seller
			</label>
		</div>
	</div>
	<div class="row">
		<div class="col-6 col-md-5 col-lg-4 col-xxl-3">
			<input type="text" id="Seller" name="Seller" class="form-control" />
		</div>
	</div>
</div>
<div class="mb-3">
	<div class="row">
		<div class="col">
			<label class="form-label" for="Amount">
				Amount
			</label>
		</div>
	</div>
	<div class="row">
		<div class="col-6 col-md-5 col-lg-4 col-xxl-3">
			<input type="number" id="Amount" name="Amount" class="form-control" />
		</div>
	</div>
</div>
<div class="mb-3">
	<div class="row">
		<div class="col-auto">
			<button class="btn btn-outline-primary" id="addLotBtn">
				Add lot
			</button>
		</div>
	</div>
</div>
<h1>
	Show lots
</h1>
<hr />
<div class="mb-3">
	<div class="row">
		<div class="col-6 col-md-5 col-lg-4 col-xxl-3">
			<select id="CurrencyTypeShow" name="CurrencyTypeShow" class="form-select">
				@foreach (var item in Enum.GetValues(typeof(CurrencyType)))
				{
					<option value="@item.ToString()">
						@item
					</option>
				}
			</select>
		</div>
	</div>
</div>