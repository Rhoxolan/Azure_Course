@{
	ViewData["Title"] = "Home Page";
}

<div class="mb-3">
	<div class="row">
		<div class="col">
			<label class="form-label" for="Image">
				Upload image:
			</label>
		</div>
	</div>
	<div class="row">
		<div class="col-6 col-md-5 col-lg-4 col-xxl-3">
			<input type="file" accept="image/*" id="Image" name="Image" class="form-control" />
		</div>
	</div>
</div>
<div class="mb-3">
	<div class="row">
		<div class="col-auto">
			<button class="btn btn-outline-secondary" id="pushBlobBtn">
				Push
			</button>
		</div>
	</div>
</div>
<hr />
<div class="mb-3">
	<div class="row">
		<div class="col">
			<label class="form-label" for="ImageName">
				Search image
			</label>
		</div>
	</div>
	<div class="row">
		<div class="col-6 col-md-5 col-lg-4 col-xxl-3">
			<input type="text" id="ImageName" name="ImageName" class="form-control" />
		</div>
	</div>
</div>
<div class="mb-3">
	<div class="row">
		<div class="col-auto">
			<button class="btn btn-outline-primary" id="searchBlobBtn">
				Search
			</button>
		</div>
	</div>
</div>
<hr />
<div class="mb-3">
	<div class="row">
		<div class="col-7 col-md-6 col-lg-5 col-xxl-4">
			<div id="imageContainer"></div>
		</div>
	</div>
</div>

